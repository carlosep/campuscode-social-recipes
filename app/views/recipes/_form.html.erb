<div id="errors">
<% if @recipe.errors.any? %>
<ul>
  <% @recipe.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
</div>

<%= form_for @recipe, html:{multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,	class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cuisine_id %>
    <%= f.collection_select :cuisine_id, @cuisines, :id, :name,	{prompt: "Select a cuisine"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :course_id %>
    <%= f.collection_select :course_id, @courses, :id, :name, {prompt: "Select a course (type)"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :preference_id %>
    <%= f.collection_select :preference_id, @preferences, :id, :name,	{prompt: "Select a preference"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :difficulty_id %>
    <%= f.collection_select :difficulty_id, @difficulties, :id, :name,	{prompt: "Select the difficulty level"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :portion  %>
    <%= f.number_field :portion,	class:"form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :cooking_time %>
    <%= f.number_field :cooking_time,	class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ingredient %>
    <%= f.text_area :ingredient,	class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :directions %>
    <%= f.text_area :directions,	class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image,	class:"form-control" %>
  </div>
  <%= f.submit submit_text, class:"btn	btn-success" %>
<% end %>
