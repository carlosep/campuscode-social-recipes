<h1><%= @recipe.name %></h1>
<% if current_user == @user %>
  <%= link_to 'Edit', edit_recipe_path(@recipe) %>
  <%= link_to 'Destroy', recipe_path(@recipe), method: :delete,
      data: {confirm: 'Are you sure?'} %>
<% end %>
<hr>
<p><strong>Preference:</strong> <%= @recipe.preference.name %></p>
<p><strong>Course:</strong> <%= @recipe.course.name %></p>
<p><strong>Cuisine:</strong> <%= @recipe.cuisine.name%></p>
<p><strong>Serves:</strong> <%= pluralize(@recipe.portion, 'person') %></p>
<p><strong>Cooking Time:</strong> <%= @recipe.cooking_time %></p>
<p><strong>Difficulty:</strong> <%= @recipe.difficulty.name %></p>
<h3>Ingredients:</h3>
<p> <%= @recipe.ingredient %></p>
<h3>Directions:</h3>
<p> <%= @recipe.directions %></p>
