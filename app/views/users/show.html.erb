<% if @user == current_user %>
<h1>Your Profile</h1>
<% else %>
<h1><%= @user.first_name %> Profile</h1>
<% end %>
<p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
<p>City: <%= @user.city %> </p>
<p>Facebook: <%= @user.facebook %></p>
<p>Twitter: <%= @user.twitter %></p>
<p>Email: <%= @user.email %></p>

<% unless @user.cuisines.blank? %>
<p>Cuisine Preferences:</p>
<ul>
  <%@user.cuisines.split(',').each do |cuisine| %>
    <%unless cuisine == ' '%>
      <li><%= Cuisine.find(cuisine).name %></li>
    <%end %>
  <% end %>
</ul>
<% end %>


<h3>My Recipes</h3>
<div class="recipes" >
  <%= render @user.recipes %>
</div>
<h3>Favorited Recipes:</h3>
<div class="favorites" >
  <% for n in 0...@user.favorites.size do %>
  <% fav_recipe = Recipe.find(@user.favorites[n-1].recipe_id) %>
    <h3><%= link_to fav_recipe.name, fav_recipe %></h3>
    <p><%= fav_recipe.preference.name %></p>
    <p><%= fav_recipe.course.name %></p>
    <p><%= fav_recipe.cuisine.name %></p>
    <p><%= fav_recipe.difficulty.name %></p>
  <% end %>
</div>
