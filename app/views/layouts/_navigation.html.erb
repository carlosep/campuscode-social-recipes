<% home = t '.home'; my_profile = t '.my_profile'; new_recipe = t '.new_recipe'%>
<% sign_out = t '.sign_out'; sign_in = t '.sign_in'; sign_up = t '.sign_up'%>

<div class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header ">
      <button	type="button"	class="navbar-toggle	collapsed"	data-toggle="collapse"	data-target="#collapibleMenu">
				<span	class="icon-bar"></span>
				<span	class="icon-bar"></span>
				<span	class="icon-bar"></span>
			</button>
    </div>
    <div	class="collapse	navbar-collapse"	id="collapibleMenu">
      <ul	class="nav	navbar-nav	navbar-left">
        <li><%= link_to home, root_path %></li>
        <% if I18n.locale != I18n.default_locale %>
          <li><%= link_to "I'd rather see this website in English", locale: 'en'%></li>
        <% else %>
          <li><%= link_to 'Prefiro ver o site em PortuguÃªs', locale: 'pt'%></li>
        <% end %>
			</ul>
      <ul	class="nav	navbar-nav	navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to my_profile, user_path(current_user) %></li>
              <li><%= link_to new_recipe, new_recipe_path %></li>
              <li><%= link_to sign_out, destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to sign_in, new_user_session_path %></li>
